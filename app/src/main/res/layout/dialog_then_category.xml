<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layout_set_then_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="110dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Select Category"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:enabled="false"
            android:textColor="@color/black"
            android:background="@color/white"/>

        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Set Parameter"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:enabled="true"
            android:textColor="@color/grey"
            android:background="@color/white"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_line_then_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_set_then_category"
        android:background="@mipmap/line"/>

    <LinearLayout
        android:id="@+id/layout_clock_then_category"
        android:layout_below="@id/img_line_then_category"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_clock_then_category"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@mipmap/clock"/>

        <TextView
            android:id="@+id/tv_clock_then_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Clock"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_music_then_category"
        android:layout_below="@id/img_line_then_category"
        android:layout_toRightOf="@id/layout_clock_then_category"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_music_then_category"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@mipmap/music"/>

        <TextView
            android:id="@+id/tv_music_then_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_music_then_category"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Music"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_gps_then_category"
        android:layout_below="@id/img_line_then_category"
        android:layout_toRightOf="@id/layout_music_then_category"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_gps_then_category"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@mipmap/location"/>

        <TextView
            android:id="@+id/tv_gps_then_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_gps_then_category"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="GPS"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_HAVC_then_category"
        android:layout_below="@id/layout_clock_then_category"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_HAVC_then_category"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@mipmap/hvac"/>

        <TextView
            android:id="@+id/tv_HAVC_then_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="HVAC"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_brightness_then_category"
        android:layout_below="@id/layout_music_then_category"
        android:layout_toRightOf="@id/layout_clock_then_category"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_brightness_then_category"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@mipmap/brightness"/>

        <TextView
            android:id="@+id/tv_brightness_then_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_music_then_category"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Brightness"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_volume_then_category"
        android:layout_below="@id/layout_gps_then_category"
        android:layout_toRightOf="@id/layout_music_then_category"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_volume_then_category"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@mipmap/volume"/>

        <TextView
            android:id="@+id/tv_volume_then_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_gps_then_category"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Volume"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>